@model List<WebAppNoAuth.Models.Product>
@{
    ViewData["Title"] = "Products Catalog";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <h1 class="mb-4">Products Catalog</h1>
            
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Description</th>
                                <th>Price</th>
                                <th>Category</th>
                                <th>Created Date</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var product in Model)
                            {
                                <tr>
                                    <td>@product.Id</td>
                                    <td><strong>@product.Name</strong></td>
                                    <td>@product.Description</td>
                                    <td>$@product.Price.ToString("F2")</td>
                                    <td>
                                        <span class="badge bg-primary">@product.Category</span>
                                    </td>
                                    <td>@product.CreatedAt.ToString("MM/dd/yyyy HH:mm")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                
                <div class="alert alert-info mt-3">
                    <strong>Total Products:</strong> @Model.Count
                </div>
            }
            else
            {
                <div class="alert alert-warning" role="alert">
                    <h4 class="alert-heading">No Products Found</h4>
                    <p>No products are available in the database. Please make sure PostgreSQL is running and the database is initialized.</p>
                    <hr>
                    <p class="mb-0">Run the init-database.sql script to create the required table and sample data.</p>
                </div>
            }
        </div>
    </div>
</div>
