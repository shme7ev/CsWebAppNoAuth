@model WebAppNoAuth.Models.HomeViewModel
@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="alert alert-success mb-4">
                <h2>üõ°Ô∏è Admin Dashboard</h2>
                <p class="mb-0">@ViewBag.Message</p>
                <hr>
                <p class="mb-0"><strong>Authenticated User:</strong> @ViewBag.Username</p>
            </div>

            <div class="alert alert-info mb-4">
                <h4 class="alert-heading">Protected Content</h4>
                <p>This page requires valid JWT authentication to access. You can see the same product data as the home page, but this section is restricted to authenticated users only.</p>
                <p class="mb-0">JWT Token Status: <span class="badge bg-success">Authenticated</span></p>
            </div>

            <!-- Raw SQL Approach Section -->
            <div class="card mb-5">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">Admin - Raw SQL Approach (Npgsql)</h3>
                </div>
                <div class="card-body">
                    @if (Model.RawSqlProducts.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>ID</th>
                                        <th>Name</th>
                                        <th>Description</th>
                                        <th>Price</th>
                                        <th>Category</th>
                                        <th>Created Date</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var product in Model.RawSqlProducts)
                                    {
                                        <tr>
                                            <td>@product.Id</td>
                                            <td><strong>@product.Name</strong></td>
                                            <td>@product.Description</td>
                                            <td>$@product.Price.ToString("F2")</td>
                                            <td>
                                                <span class="badge bg-primary">@product.Category</span>
                                            </td>
                                            <td>@product.CreatedAt.ToString("MM/dd/yyyy HH:mm")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        
                        <div class="alert alert-success mt-3">
                            <strong>Total Products (Raw SQL):</strong> @Model.RawSqlCount
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning" role="alert">
                            <h4 class="alert-heading">No Products Found (Raw SQL)</h4>
                            <p>No products retrieved using raw SQL approach.</p>
                        </div>
                    }
                </div>
            </div>

            <!-- Entity Framework Approach Section -->
            <div class="card mb-5">
                <div class="card-header bg-success text-white">
                    <h3 class="mb-0">Admin - Entity Framework Approach (DbContext)</h3>
                </div>
                <div class="card-body">
                    @if (Model.EntityFrameworkProducts.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>ID</th>
                                        <th>Name</th>
                                        <th>Description</th>
                                        <th>Price</th>
                                        <th>Category</th>
                                        <th>Created Date</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var product in Model.EntityFrameworkProducts)
                                    {
                                        <tr>
                                            <td>@product.Id</td>
                                            <td><strong>@product.Name</strong></td>
                                            <td>@product.Description</td>
                                            <td>$@product.Price.ToString("F2")</td>
                                            <td>
                                                <span class="badge bg-success">@product.Category</span>
                                            </td>
                                            <td>@product.CreatedAt.ToString("MM/dd/yyyy HH:mm")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        
                        <div class="alert alert-success mt-3">
                            <strong>Total Products (Entity Framework):</strong> @Model.EntityFrameworkCount
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning" role="alert">
                            <h4 class="alert-heading">No Products Found (Entity Framework)</h4>
                            <p>No products retrieved using Entity Framework approach.</p>
                        </div>
                    }
                </div>
            </div>

        </div>
    </div>
</div>
