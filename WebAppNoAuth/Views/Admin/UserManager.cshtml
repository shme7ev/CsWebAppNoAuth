@model List<WebAppNoAuth.Models.AuthUser>
@{
    ViewData["Title"] = "User Management";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <h1 class="display-4">@ViewBag.Message</h1>
            <div class="alert alert-info">
                <strong>Current User:</strong> @ViewBag.Username<br>
                <strong>Role:</strong> @ViewBag.UserRole
            </div>
            
            @if (Model != null && Model.Any())
            {
                <div class="card">
                    <div class="card-header">
                        <h3>User List (@Model.Count users)</h3>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="thead-dark">
                                    <tr>
                                        <th>Username</th>
                                        <th>Email</th>
                                        <th>Location</th>
                                        <th>Department</th>
                                        <th>Role</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var user in Model)
                                    {
                                        <tr>
                                            <td>@user.Username</td>
                                            <td>@user.Email</td>
                                            <td>@user.Location</td>
                                            <td>@user.Department</td>
                                            <td>
                                                <span class="badge @(user.Role == "Admin" ? "bg-danger" : 
                                                                   user.Role == "Manager" ? "bg-warning" : 
                                                                   "bg-secondary")">
                                                    @user.Role
                                                </span>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="alert alert-warning">
                    <h4>No users found</h4>
                    <p>No user data is available at the moment.</p>
                </div>
            }

            <div class="mt-4">
                <a href="@Url.Action("Index", "Admin")" class="btn btn-primary">Back to Admin Dashboard</a>
                <a href="@Url.Action("Reports", "Admin")" class="btn btn-secondary">View Reports</a>
                <a href="@Url.Action("Profile", "Admin")" class="btn btn-info">My Profile</a>
            </div>
        </div>
    </div>
</div>