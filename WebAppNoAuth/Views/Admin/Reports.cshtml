@{
    ViewData["Title"] = "Reports Dashboard";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <h1 class="display-4">@ViewBag.Message</h1>
            <div class="alert alert-info">
                <strong>Current User:</strong> @ViewBag.Username<br>
                <strong>Role:</strong> @ViewBag.UserRole
            </div>
            
            @if (ViewBag.Stats != null)
            {
                <div class="row mb-4">
                    <div class="col-md-3">
                        <div class="card text-white bg-primary">
                            <div class="card-body">
                                <h5 class="card-title">Total Users</h5>
                                <h2>@ViewBag.Stats.TotalUsers</h2>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card text-white bg-danger">
                            <div class="card-body">
                                <h5 class="card-title">Admin Users</h5>
                                <h2>@ViewBag.Stats.AdminUsers</h2>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card text-white bg-warning">
                            <div class="card-body">
                                <h5 class="card-title">Managers</h5>
                                <h2>@ViewBag.Stats.ManagerUsers</h2>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card text-white bg-secondary">
                            <div class="card-body">
                                <h5 class="card-title">Regular Users</h5>
                                <h2>@ViewBag.Stats.RegularUsers</h2>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card">
                    <div class="card-header">
                        <h3>Role Distribution</h3>
                    </div>
                    <div class="card-body">
                        <div class="progress mb-3">
                            <div class="progress-bar bg-danger" role="progressbar" 
                                 style="width: @((double)ViewBag.Stats.AdminUsers / ViewBag.Stats.TotalUsers * 100)%">
                                Admin (@ViewBag.Stats.AdminUsers)
                            </div>
                        </div>
                        <div class="progress mb-3">
                            <div class="progress-bar bg-warning" role="progressbar" 
                                 style="width: @((double)ViewBag.Stats.ManagerUsers / ViewBag.Stats.TotalUsers * 100)%">
                                Manager (@ViewBag.Stats.ManagerUsers)
                            </div>
                        </div>
                        <div class="progress">
                            <div class="progress-bar bg-secondary" role="progressbar" 
                                 style="width: @((double)ViewBag.Stats.RegularUsers / ViewBag.Stats.TotalUsers * 100)%">
                                Regular Users (@ViewBag.Stats.RegularUsers)
                            </div>
                        </div>
                    </div>
                </div>
            }

            <div class="mt-4">
                <a href="@Url.Action("Index", "Admin")" class="btn btn-primary">Back to Admin Dashboard</a>
                @if (ViewBag.UserRole == "Admin")
                {
                    <a href="@Url.Action("UserManager", "Admin")" class="btn btn-success">Manage Users</a>
                }
                <a href="@Url.Action("Profile", "Admin")" class="btn btn-info">My Profile</a>
            </div>
        </div>
    </div>
</div>