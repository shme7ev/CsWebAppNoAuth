@{
    ViewData["Title"] = "Admin Login";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-primary text-white text-center">
                    <h3 class="mb-0">Admin Login - Generate Token</h3>
                </div>
                <div class="card-body">
                    @if (ViewBag.Success != null)
                    {
                        <div class="alert alert-success">
                            <h4 class="alert-heading">@ViewBag.Success</h4>
                            <p><strong>Username:</strong> @ViewBag.Username</p>
                            
                            <div class="mt-3">
                                <label class="form-label"><strong>Your JWT Token:</strong></label>
                                <textarea class="form-control" rows="4" readonly onclick="this.select()">@ViewBag.Token</textarea>
                            </div>
                        </div>
                    }
                    else if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger">
                            <h4 class="alert-heading">Error</h4>
                            <p class="mb-0">@ViewBag.Error</p>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <h4 class="alert-heading">Welcome to Admin Portal</h4>
                            <p>Enter your username to generate a JWT token for accessing protected admin areas.</p>
                            <hr>
                            <p class="mb-0"><strong>Note:</strong> This is a demo system - any username will work.</p>
                        </div>
                    }

                    @if (ViewBag.Success == null)
                    {
                        <form method="post" class="mt-4">
                            <div class="mb-3">
                                <label for="username" class="form-label">Username</label>
                                <input type="text" class="form-control" id="username" name="username" placeholder="Enter your username" required>
                                <div class="form-text">Any username works in this demo environment.</div>
                            </div>
                            
                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-primary btn-lg">
                                    Generate JWT Token
                                </button>
                            </div>
                        </form>
                    }

                    <div class="mt-4">
                        <div class="card">
                            <div class="card-header bg-light">
                                <h5 class="mb-0">How to Use Your Token</h5>
                            </div>
                            <div class="card-body">
                                <ol>
                                    <li>Copy the JWT token above</li>
                                    <li>Add it to your HTTP requests in the Authorization header</li>
                                    <li>Format: <code>Bearer YOUR_TOKEN_HERE</code></li>
                                    <li>Or click "Access Admin Dashboard" to test in browser</li>
                                </ol>
                                
                                <div class="mt-3">
                                    <a href="@Url.Action("Index", "Home")" class="btn btn-outline-secondary">
                                        ‚Üê Back to Home
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

