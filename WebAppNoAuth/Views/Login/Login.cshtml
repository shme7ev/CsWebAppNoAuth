@{
    ViewData["Title"] = "Admin Login";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white text-center">
                    <h3 class="mb-0">Admin Login - Generate Token</h3>
                </div>
                <div class="card-body">
                    @if (ViewBag.Message != null)
                    {
                        <div class="alert alert-success">
                            <h4 class="alert-heading">@ViewBag.Message</h4>
                            <p><strong>Username:</strong> @ViewBag.Username</p>

                            <div class="mt-3">
                                <label class="form-label"><strong>Your JWT Token:</strong></label>
                                <textarea class="form-control" rows="4" readonly
                                          onclick="this.select()">@ViewBag.Token</textarea>
                            </div>
                        </div>
                    }
                    else if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger">
                            <h4 class="alert-heading">Error</h4>
                            <p class="mb-0">@ViewBag.Error</p>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <h4 class="alert-heading">Welcome to Admin Portal</h4>
                            <p>Enter a valid username to generate a JWT token with appropriate role-based access.</p>
                            <hr>
                            <p class="mb-0"><strong>Available default users: (TODO: pull these from
                                    UserService)</strong></p>
                            <ul class="mb-0">
                                <li><strong>admin</strong> - Full administrative access</li>
                                <li><strong>manager</strong> - Manager access</li>
                                <li><strong>user</strong> - Standard user access</li>
                                <li><strong>developer</strong> - Developer access</li>
                                <li><strong>hr</strong> - HR access</li>
                            </ul>

                            <p class="mb-0"><strong>You can create your own user (in-memory, not persisted) thru
                                    UserController</strong></p>

                        </div>
                    }

                    @if (ViewBag.Message == null)
                    {
                        <form method="post" class="mt-4">
                            <div class="mb-3">
                                <label for="username" class="form-label">Username</label>
                                <input type="text" class="form-control" id="username" name="username"
                                       placeholder="Enter username (e.g., admin)" required>
                                <div class="form-text">Enter username.</div>
                            </div>

                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-primary btn-lg">
                                    Generate JWT Token
                                </button>
                            </div>
                        </form>
                    }

                    <div class="mt-4">
                        <div class="card">

                            <div class="mt-4">
                                <li><a href="@Url.Action("Index", "Admin")" class="btn btn-primary">
                                        Admin Dashboard - all authenticated users
                                    </a></li>
                                <li><a href="@Url.Action("Profile", "Admin")" class="btn btn-info">
                                        My Profile - all authenticated users
                                    </a></li>
                                <li><a href="@Url.Action("Reports", "Admin")" class="btn btn-secondary">
                                        View Reports - Admin and Manager only
                                    </a></li>
                                <li><a href="@Url.Action("UserManager", "Admin")" class="btn btn-secondary">
                                        UserManager - Admin only
                                    </a></li>
                            </div>

                            <div class="mt-3">
                                <a href="@Url.Action("Index", "Home")" class="btn btn-outline-secondary">
                                    ‚Üê Back to Home
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

