@{
    ViewData["Title"] = "Admin Login";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white text-center">
                    <h3 class="mb-0">Admin Login - Generate Token</h3>
                </div>
                <div class="card-body">
                    @if (ViewBag.Message != null)
                    {
                        <div class="alert alert-success">
                            <h4 class="alert-heading">@ViewBag.Message</h4>
                            <p><strong>Username:</strong> @ViewBag.Username</p>
                            <p><strong>Role:</strong> <span class="badge @(ViewBag.Role == "Admin" ? "bg-danger" : ViewBag.Role == "Manager" ? "bg-warning" : "bg-secondary")">@ViewBag.Role</span></p>
                            
                            <div class="mt-3">
                                <label class="form-label"><strong>Your JWT Token:</strong></label>
                                <textarea class="form-control" rows="4" readonly onclick="this.select()">@ViewBag.Token</textarea>
                            </div>
                        </div>
                    }
                    else if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger">
                            <h4 class="alert-heading">Error</h4>
                            <p class="mb-0">@ViewBag.Error</p>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <h4 class="alert-heading">Welcome to Admin Portal</h4>
                            <p>Enter a valid username to generate a JWT token with appropriate role-based access.</p>
                            <hr>
                            <p class="mb-0"><strong>Available default users:</strong></p>
                            <ul class="mb-0">
                                <li><strong>admin</strong> - Full administrative access</li>
                                <li><strong>manager</strong> - Manager access</li>
                                <li><strong>user</strong> - Standard user access</li>
                                <li><strong>developer</strong> - Developer access</li>
                                <li><strong>hr</strong> - HR access</li>
                            </ul>

                            <p class="mb-0"><strong>You can create your own user (in-memory, not persisted) thru UserController</strong></p>

                        </div>
                    }

                    @if (ViewBag.Message == null)
                    {
                        <form method="post" asp-action="GenerateToken" asp-controller="Admin" class="mt-4">
                            <div class="mb-3">
                                <label for="username" class="form-label">Username</label>
                                <input type="text" class="form-control" id="username" name="username" placeholder="Enter username (e.g., admin)" required>
                                <div class="form-text">Enter username.</div>
                            </div>
                            
                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-primary btn-lg">
                                    Generate JWT Token
                                </button>
                            </div>
                        </form>
                    }

                    <div class="mt-4">
                        <div class="card">
                            <div class="card-header bg-light">
                                <h5 class="mb-0">How to Use Your Token</h5>
                            </div>
                            <div class="card-body">
                                <ol>
                                    <li>Copy the JWT token above</li>
                                    <li>Add it to your HTTP requests in the Authorization header</li>
                                    <li>Format: <code>Bearer YOUR_TOKEN_HERE</code></li>
                                    <li>Test different admin endpoints based on your role:</li>
                                    <ul>
                                        <li><strong>All authenticated users:</strong> /Admin/Profile</li>
                                        <li><strong>Admin & Managers:</strong> /Admin/Reports</li>
                                        <li><strong>Admin only:</strong> /Admin/UserManager</li>
                                    </ul>
                                </ol>
                                
                                <div class="mt-3">
                                    <a href="@Url.Action("Index", "Home")" class="btn btn-outline-secondary">
                                        ‚Üê Back to Home
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

